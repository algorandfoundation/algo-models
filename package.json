{
  "name": "@algorandfoundation/algo-models",
  "version": "0.0.6",
  "description": "This package is meant for integrators that want to add Algorand's functionality to their applications",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.esm.json && tsc -p tsconfig.cjs.json",
    "commit": "cz",
    "test": "jest lib --verbose --maxWorkers=1",
    "test:cov": "jest lib --coverage --maxWorkers=1",
    "typedoc": "typedoc",
    "release": "semantic-release --dry-run",
    "prepare": "husky install"
  },
  "author": "",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.7.1",
    "algosdk": "^3.1.0",
    "jest": "^29.7.0",
    "commitizen": "^4.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.2",
    "semantic-release": "^22.0.5",
    "ts-jest": "^29.1.1",
    "tweetnacl": "^1.0.3",
    "typedoc": "^0.26.7",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "ajv-keywords": "^5.1.0",
    "algo-msgpack-with-bigint": "^2.1.1",
    "hi-base32": "^0.5.1",
    "js-sha512": "^0.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "release": {
    "branches": [
      "release/*",
      {
        "name": "main",
        "prerelease": "canary"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".spec.ts$",
    "transform": {
      ".+\\.(t|j)s$": [
        "ts-jest",
        {
          "useEsm": true
        }
      ]
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "lib/**",
      "**/!(*.module|*.interface|main|repl|exception.filter|logging.interceptor).{ts,js}"
    ],
    "coveragePathIgnorePatterns": [
      "./coverage",
      "./index.ts"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^((?!bignumber).+)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  }
}
